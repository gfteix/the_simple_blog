<html>
	<head>
		<meta charset="utf-8">
		<title>My Blog</title>
        <link rel="stylesheet" href="/styles/main.css">
        <link rel="stylesheet" href="/styles/create.css">

	<meta name="viewport" content="width=device-width, height=device-height, initial-scale=1, maximum-scale=1, user-scalable=no" />
	</head>

	<body>
		
		<%- include('parts/header') %> 

		<div class="container">
             
			<form action="/post/edit/<%=post.id%> " method="POST">
				<input type="text" name="title" placeholder="Title" value="<%=post.title%>">
				<textarea type="text" name="content" placeholder="Content"><%=post.content%></textarea>
				<input type="text" name="category" placeholder="Category" value="<%=post.category%>">
				<input type="text" name="author" placeholder="Author" value="<%=post.author%>">
				<button type="submit" class="default-btn">Save</button>
			</form>

		</div>
	<script src="/scripts/script.js"></script>
	</body>
</html>
